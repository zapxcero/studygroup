<section class="section">
  <div class="container">
    <h2 class="title">New Study Group</h2>
    <%= form_with scope: "event", url: events_path, local:true, method: :post do |f| %>
      <div class="field">
        <%= f.label :name, class: "label" %><br />
        <%= f.text_field :name, class: "input" %>

      </div>
      <div class="field">
        <%= f.label :location, class: "label" %><br />
        <%= f.text_field :location, class: "input" %>

      </div>
          <div class="field">
        <%= f.label :date, class: "label" %><br />
        <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d'), class: "input" %>
  
      </div>
      <div class="actions">
        <%= f.submit "Create Study Group", class: "button is-link"%>
      </div>
    <% end %>
  </div>
</section